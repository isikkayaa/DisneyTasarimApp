<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fonRenk"
    android:backgroundTint="@color/fonRenk"
    tools:context=".ui.fragment.AnasayfaFragment"
    tools:layout_editor_absoluteY="25dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AnasayfaFragment">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="191dp"
                android:layout_height="37dp"
                android:layout_marginStart="108dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="108dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ilkRv"
                android:layout_width="412dp"
                android:layout_height="151dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.033" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ikinciRv"
                android:layout_width="415dp"
                android:layout_height="220dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:layout_constraintVertical_bias="0.078" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ucuncuRv"
                android:layout_width="416dp"
                android:layout_height="236dp"
                android:layout_marginTop="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="180dp"
                android:layout_height="27dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="sans-serif-medium"
                android:text="Disney+ 'ta Yeni"
                android:textColor="#C5BEBE"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/ikinciRv"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/button"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="59dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:src="@drawable/marvel"
                app:layout_constraintStart_toStartOf="@+id/button3"
                app:layout_constraintTop_toBottomOf="@+id/ilkRv" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:src="@drawable/pixar"
                app:layout_constraintStart_toStartOf="@+id/button2"
                app:layout_constraintTop_toBottomOf="@+id/ilkRv" />

        <Button
        android:id="@+id/button4"
        android:layout_width="64dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@color/fonRenk"
        android:backgroundTint="@color/fonRenk"
        android:textColorHighlight="#E4DFDF"
        android:textColorHint="#EDE8E8"
        android:textColorLink="#EFE8E8"
        android:visibility="invisible"
        app:cornerRadius="7dp"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/ilkRv"
        app:strokeColor="#BAB7B7"
        app:strokeWidth="0.6dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="59dp"
                android:layout_height="67dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:src="@drawable/nat_geo"
                app:layout_constraintStart_toStartOf="@+id/button5"
                app:layout_constraintTop_toBottomOf="@+id/ilkRv" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="56dp"
                android:layout_height="68dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:src="@drawable/star_wars_white"
                app:layout_constraintStart_toStartOf="@+id/button4"
                app:layout_constraintTop_toBottomOf="@+id/ilkRv" />

        <Button
        android:id="@+id/button5"
        android:layout_width="72dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/fonRenk"
        android:visibility="invisible"
        app:cornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/ilkRv"
        app:strokeColor="#BAB7B7"
        app:strokeWidth="0.6dp" />

        <Button
        android:id="@+id/button2"
        android:layout_width="62dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/fonRenk"
        android:visibility="invisible"
        app:cornerRadius="7dp"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/ilkRv"
        app:strokeColor="#BAB7B7"
        app:strokeWidth="0.6dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:src="@drawable/disney"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/ilkRv" />

        <Button
        android:id="@+id/button"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/fonRenk"
        android:visibility="invisible"
        app:cornerRadius="7dp"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ilkRv"
        app:strokeColor="#BAB7B7"
        app:strokeWidth="0.6dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/fonRenk"
                android:visibility="invisible"
                app:cornerRadius="7dp"
                app:layout_constraintEnd_toStartOf="@+id/button4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button2"
                app:layout_constraintTop_toBottomOf="@+id/ilkRv"
                app:strokeColor="#0BAB7B7F"
                app:strokeWidth="0.6dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="205dp"
                android:layout_height="33dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="195dp"
                android:fontFamily="sans-serif-medium"
                android:text="Sana Özel Öneriler"
                android:textColor="#C5BEBE"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/ikinciRv"
                app:layout_constraintTop_toBottomOf="@+id/ikinciRv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>